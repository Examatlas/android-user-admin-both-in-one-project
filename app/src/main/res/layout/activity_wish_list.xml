<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Books.WishListActivity"
    android:background="@color/light_dark_grey">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/backBtn"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="My WishList"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wishListItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noItemTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No books in your WishList"
        android:textColor="@color/seed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_for_user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/topBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA1"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="6dp"
                >
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA2"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                android:layout_toRightOf="@id/imgA1"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA3"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                android:layout_below="@id/imgA1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA4"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                android:layout_toRightOf="@id/imgA3"
                android:layout_below="@id/imgA2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA5"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                android:layout_below="@id/imgA3"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imgA6"
                android:layout_width="170dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                android:layout_toRightOf="@id/imgA5"
                android:layout_below="@id/imgA4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:background="@drawable/skeleton_background"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>