<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_dark_grey"
    tools:context=".activities.Books.DeliveryAddressInputActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="7dp"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backBtn"
            android:textSize="20sp"
            android:text="Select Address"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/indicatorRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/numberIndicatorRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/oneTxt"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="1"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"
                android:background="@drawable/one_circle_blue_bg"/>
            <View
                android:id="@+id/view1"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/light_dark_grey"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/oneTxt"/>
            <TextView
                android:id="@+id/twoTxt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="2"
                android:textSize="11sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"
                android:textColor="@color/seed"
                android:layout_toRightOf="@id/view1"
                android:background="@drawable/one_circle_white_bg"/>
            <View
                android:id="@+id/view2"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/light_dark_grey"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/twoTxt"/>
            <TextView
                android:id="@+id/threeTxt"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="3"
                android:textSize="10sp"
                android:textColor="@color/seed"
                android:layout_toRightOf="@id/view2"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/one_circle_white_bg"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/seed"
            android:layout_below="@id/numberIndicatorRL"
            android:layout_toLeftOf="@id/orderSummaryTxt"
            android:layout_marginRight="37dp"
            />
        <TextView
            android:id="@+id/orderSummaryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/numberIndicatorRL"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/numberIndicatorRL"
            android:layout_toRightOf="@id/orderSummaryTxt"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicatorRL"
        />
</RelativeLayout>