<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_dark_grey"
    tools:context=".activities.Books.CartViewActivity">
    <RelativeLayout
        android:id="@+id/noItemRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/emptyIc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_empty_cart"/>
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Cart is empty"
            android:layout_below="@id/emptyIc"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/seed" />
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looks like your haven't made your choice."
            android:layout_below="@id/t1"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/seed"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomStickyRelativeLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:elevation="6dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/backBtn"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="My Cart"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/indicatorRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBar"
                android:elevation="5dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/numberIndicatorRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:id="@+id/oneTxt"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:text="1"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/one_circle_blue_bg"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="@color/seed"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_toRightOf="@id/oneTxt"/>
                    <TextView
                        android:id="@+id/twoTxt"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="2"
                        android:textSize="11sp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/view1"
                        android:background="@drawable/one_circle_blue_bg"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="@color/light_dark_grey"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_toRightOf="@id/twoTxt"/>
                    <TextView
                        android:id="@+id/threeTxt"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:text="3"
                        android:textSize="10sp"
                        android:textColor="@color/seed"
                        android:layout_toRightOf="@id/view2"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/one_circle_white_bg"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/seed"
                    android:layout_below="@id/numberIndicatorRL"
                    android:layout_toLeftOf="@id/orderSummaryTxt"
                    android:layout_marginRight="37dp"
                    />
                <TextView
                    android:id="@+id/orderSummaryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Summary"
                    android:textColor="@color/seed"
                    android:layout_below="@id/numberIndicatorRL"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@id/numberIndicatorRL"
                    android:layout_toRightOf="@id/orderSummaryTxt"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="1"/>

            </RelativeLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/indicatorRL"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:layout_below="@id/img1"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:layout_below="@id/img2"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@drawable/skeleton_background" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img4"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:layout_below="@id/img3"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_below="@id/img4"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_below="@id/img5"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <RelativeLayout
                android:id="@+id/deliveryAddressRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/indicatorRL"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/addAddressTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Delivery Address"
                    android:textColor="@color/seed"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <RelativeLayout
                    android:id="@+id/deliveryFullRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:visibility="gone"
                    android:background="@color/white">
                    <RelativeLayout
                        android:id="@+id/changeBtnRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deliver to:"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/changeAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_forward"
                            android:text="Change"
                            android:textColor="@color/wallet_holo_blue_light"
                            android:layout_marginRight="25dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/rounded_corner_for_rate_product_plain"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/changeBtnRL"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/deliveryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zaki Ajmal"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/deliveryAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete Address"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/deliveryPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9123456789"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/singleOrRecyclerViewRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deliveryAddressRL">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/itemRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    tools:listitem="@layout/delivery_item_cart_view_recycler_item_layout" />
                <RelativeLayout
                    android:id="@+id/singleItemRL"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/firstRL"
                        android:layout_width="match_parent"
                        android:elevation="5dp"
                        android:layout_height="100dp">
                        <ImageView
                            android:id="@+id/bookImage"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:src="@drawable/book1"
                            android:scaleType="fitCenter"
                            android:layout_margin="5dp"
                            />
                        <TextView
                            android:id="@+id/bookTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Title"
                            android:layout_toRightOf="@id/bookImage"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:lines="2"
                            />
                        <TextView
                            android:id="@+id/bookAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book Author"
                            android:textSize="14sp"
                            android:layout_below="@id/bookTitle"
                            android:layout_toRightOf="@id/bookImage"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            />
                        <com.examatlas.activities.Books.CustomRatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/bookImage"
                            android:layout_below="@id/bookAuthor"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/quantityRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/firstRL">
                        <LinearLayout
                            android:id="@+id/quantityLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="23dp"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:background="@drawable/rounded_corner_for_rate_product_plain">
                            <TextView
                                android:id="@+id/quantityTxtView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qty: 10"
                                android:textSize="14sp"
                                android:padding="5dp"/>

                            <ProgressBar
                                android:id="@+id/quantityProgressbar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/bookPriceInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="$10.00"
                            android:layout_toRightOf="@id/quantityLayout"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="36dp"
                            android:layout_marginTop="13dp"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_dark_grey"
                        android:layout_below="@id/quantityRL"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/priceRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="5dp"
                android:layout_below="@id/singleOrRecyclerViewRL"
                android:visibility="gone">
                <TextView
                    android:id="@+id/priceDetailsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Details:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"/>
                <LinearLayout
                    android:id="@+id/priceAndItemsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@id/priceDetailsTxt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:id="@+id/priceAndItemstxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Price(1 item)"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        />
                    <TextView
                        android:id="@+id/priceTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/discountAndItemsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@id/priceAndItemsLinearLayout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/discountAndItemstxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        />
                    <TextView
                        android:id="@+id/discountTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-1234"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shippingAndItemsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@id/discountAndItemsLinearLayout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/deliveryAndItemstxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charges"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"
                        />
                    <TextView
                        android:id="@+id/deliveryTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-1234"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@id/shippingAndItemsLinearLayout"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:id="@+id/totalAmountLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@id/line2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/totalAmountTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/totalAmountPriceTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-1234"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/bottomStickyRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_dark_grey" />
        <LinearLayout
            android:id="@+id/bottomStickyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/bottomStickyAmountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/gotoCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/seed"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>