<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/sub_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/imgArrow"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/image1" />
        <RelativeLayout
            android:id="@+id/textSuccessRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgBook"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txtSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Order SuccessFull"
                android:textColor="@color/green"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtBookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Book title"
                android:layout_below="@id/txtSuccess"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />
        </RelativeLayout>
        <com.examatlas.activities.Books.CustomRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSuccessRL"
            android:layout_toRightOf="@id/imgBook"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/writeReviewTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Write a Review"
            android:layout_below="@id/ratingBar"
            android:layout_toRightOf="@id/imgBook"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/editYourReviewTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Edit your Review"
            android:layout_below="@id/ratingBar"
            android:layout_toRightOf="@id/imgBook"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>