            android:id="@+id/bookImg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/view1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/book1" />
