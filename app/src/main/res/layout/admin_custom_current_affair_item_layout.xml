<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/imgAffair"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage" />

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/imageCardView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:text="Blog Title"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"
            android:letterSpacing="0.1"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/editCABtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageCardView"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_weight="0.2"
            />
        <TextView
            android:id="@+id/txtCAKeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Keyword"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/txtTitle"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCAKeyword"
            android:layout_above="@id/txtAuthor"
            android:layout_margin="10dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <WebView
                    android:id="@+id/txtContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="JSSC : Jharkhand Staff Selection Commission"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
            </ScrollView>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="TAGS:"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tagTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins"
            android:text="Tag Text"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/txtAuthor"/>
        <ImageView
            android:id="@+id/deleteCABtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>