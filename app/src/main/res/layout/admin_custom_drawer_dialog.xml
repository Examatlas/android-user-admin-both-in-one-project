<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#08FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:background="@color/md_theme_dark_secondaryContainer"
            android:orientation="vertical"
            android:padding="20dp">
            <ImageView
                android:id="@+id/dashboardIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dashboard"/>
            <TextView
                android:id="@+id/txtDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="DASHBOARD"
                android:layout_toRightOf="@id/dashboardIcon"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtDashboard"
                android:layout_marginTop="5dp"
                android:background="@color/md_theme_dark_onSurface" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDashboard"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/itemsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layoutHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="9dp"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.8"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutMaster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Master"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/masterDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/masterDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/contentDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/contentDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutWebsiteApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Website &amp; App"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/websiteAppDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/websiteAppDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutMarketing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marketing"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/marketingDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/marketingDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/usersDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/usersDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutReports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/reportsDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/reportsDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                     <LinearLayout
                        android:id="@+id/layoutManage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="2.6"/>
                        <ImageView
                            android:id="@+id/manageDropDownIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/dropdown"
                            android:layout_weight="0.2"
                            />

                    </LinearLayout>
                    <Spinner
                        android:id="@+id/manageDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/layoutShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="9dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.8"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="9dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:layout_weight="0.2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.8"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33dp"
            app:cardBackgroundColor="@color/seed"
            app:cardCornerRadius="100dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drawer_back" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/transLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#08FFFFFF"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>