<!--            android:layout_below="@id/addressFullTxt"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:foreground="?android:attr/selectableItemBackgroundBorderless"-->
<!--            />-->
    </RelativeLayout>
</RelativeLayout>