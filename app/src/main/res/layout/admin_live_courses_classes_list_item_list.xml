<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/timeAndDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24-10-2024 (14:23)"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/classTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/liveTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/scheduleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScheduleTime:"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@id/classTitleTxt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/scheduleTxtDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScheduleTime:"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@id/classTitleTxt"
            android:layout_toRightOf="@id/scheduleTxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/deleteClassBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete"
            android:layout_below="@id/scheduleTxt"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/goLiveTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Live"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:layout_below="@id/scheduleTxt"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>