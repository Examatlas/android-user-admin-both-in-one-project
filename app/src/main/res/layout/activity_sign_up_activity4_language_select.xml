<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SignUpActivity4LanguageSelect">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/newlogo"
        android:visibility="visible" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/logo"
        android:letterSpacing="0.1"
        android:shadowColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Select Language"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/hindiCardTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/text1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_for_language_select_without_border"
        android:letterSpacing="0.3"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="HINDI"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/englishCardTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/hindiCardTxt"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_for_language_select_without_border"
        android:letterSpacing="0.3"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="ENGLISH"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/hinglishCardTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/englishCardTxt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_for_language_select_without_border"
        android:letterSpacing="0.3"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="HINGLISH"
        android:textColor="@color/white" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/userNextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/seed"
        android:fontFamily="@font/poppins"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="10dp"
        android:letterSpacing="0.1"
        android:layout_alignParentBottom="true"
        android:text="Next >"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="100dp" />
</RelativeLayout>