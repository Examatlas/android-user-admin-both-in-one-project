<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/hardbook_ecomm_purchase_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:src="@drawable/newlogo"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />
        <RelativeLayout
            android:id="@+id/cartRl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/cartBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cart"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/cartItemCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/one_circle_blue_bg"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/searchViewFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/logo"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_corner_for_searchview">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/search"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"/>
                <EditText
                    android:id="@+id/search_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search e-books"
                    android:layout_toRightOf="@id/search"
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"
                    />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hardbook_ecomm_purchase_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/sliderRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_Slider_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="10dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="6dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/slider_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeWidth="0dp"
                    android:visibility="gone"
                    >
                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:iss_selected_dot="@drawable/active_dot"
                        app:iss_unselected_dot="@drawable/inactive_dot"
                        app:iss_auto_cycle="true"
                        app:iss_period="1500"
                        app:iss_delay="0" />
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/purchasedEBookRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/sliderRL"
                android:background="@color/white">
                <TextView
                    android:id="@+id/bookOfUserTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Purchased E-Books"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/bookOfUserViewAllTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="View All >"
                    android:textColor="@color/seed"
                    android:textSize="11sp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bookOfUserShimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/purchasedEBookRL">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_for_user_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgA1"
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="6dp"
                            >
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgA2"
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="7dp"
                            android:layout_toRightOf="@id/imgA1"
                            android:layout_marginLeft="10dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="7dp"
                            android:layout_toRightOf="@id/imgA2"
                            android:layout_marginLeft="10dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/booksOfUserRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/light_dark_grey"
                android:layout_below="@id/bookOfUserShimmerLayout"
                android:layout_marginBottom="5dp"/>
            <RelativeLayout
                android:id="@+id/bookForYouRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/bookForYouTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Selling EBooks"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bookForYouViewAllTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="View All >"
                    android:textColor="@color/seed"
                    android:textSize="11sp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bestSellingItemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookForYouRL">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_Best_selling_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgB1"
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="6dp"
                            >
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgB2"
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="7dp"
                            android:layout_toRightOf="@id/imgB1"
                            android:layout_marginLeft="10dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="230dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardCornerRadius="7dp"
                            android:layout_toRightOf="@id/imgB2"
                            android:layout_marginLeft="10dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="230dp"
                                android:background="@drawable/skeleton_background"
                                />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/booksBestSelling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>