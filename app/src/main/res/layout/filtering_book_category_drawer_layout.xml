<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#08FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:background="@color/md_theme_dark_surfaceTint"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/topProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Choose a Category"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/topProfileLayout"
                android:background="@color/md_theme_dark_onSurface" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_category_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:visibility="visible"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="6dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img1"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img2"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img3"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img4"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img6"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img5"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img7"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_below="@id/img6"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="6dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img8"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img7"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img9"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_below="@id/img8"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/img9">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img11"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/img10">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/img12"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/img11"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/skeleton_background"
                            />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryNameRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topProfileLayout"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/seed"
            app:cardCornerRadius="100dp"
            app:strokeWidth="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drawer_back" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/transLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#08FFFFFF"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>