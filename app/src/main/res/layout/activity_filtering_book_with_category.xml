<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.Books.FilteringBookWithCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_dark_surfaceTint"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"/>
        <FrameLayout
            android:id="@+id/searchViewFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/backBtn"
            android:layout_toLeftOf="@id/cartBtn"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_corner_for_searchview2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/search"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/search"/>
                <EditText
                    android:id="@+id/search_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search books"
                    android:clickable="true"
                    android:layout_toRightOf="@id/search"
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="5dp"/>
            </RelativeLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/cartBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>


<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/categoryRecycler"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@id/toolbar"-->
<!--            android:background="@color/white"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginBottom="10dp" />-->
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/light_dark_grey"
        android:layout_below="@id/toolbar"/>
    <TextView
        android:id="@+id/showingCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books related to: "
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:layout_below="@id/view1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/showingCategoryDisplayNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/view1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/showingCategoryText"
        />
    <TextView
        android:id="@+id/viewAllCategoryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All >"
        android:textColor="@color/seed"
        android:textSize="12sp"
        android:layout_below="@id/view1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/light_dark_grey"
        android:layout_below="@id/showingCategoryText"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booksRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view2"
        android:background="@color/white"
        />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>